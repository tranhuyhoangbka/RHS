<div class="form-create-review">  
  <div class="row">
    <div class="col-md-1 avatar">
      <% if user_signed_in? %>
        <%= link_to "#" do %>
          <%= image_tag current_user.avatar %>
        <% end %>
      <% else %>
        <%= image_tag Settings.user.avatar_default %>
      <% end %>
    </div>
    <div class="col-md-11">      
      <%= form_for [@address, @review], html: {multipart: true}, remote: true do |f| %>
        <div class="text-area-wrapper">
          <%= f.text_area :content, class: "form-control", 
                                    placeholder: t("review.placeholder") %>
        </div>        
        <div class="post-action">          
          <section class="upload-img">
            <%= image_tag "image_up.png" %>
            <%= f.file_field :image, id: "choose-file" %>
          </section>
          <section class="rate-address">
            <%= rating_for @address, "trust", enable_half: true, disable_after_rate: false %>
          </section>
          <section class="form-actions">
            <%= f.submit %>
          </section>
          <div class="clearfix"></div>
        </div>        
      <% end %>
    </div>
  </div>
</div>
