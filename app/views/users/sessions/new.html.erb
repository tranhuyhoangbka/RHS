<div id="login-overlay" class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <h4 class="modal-title" id="myModalLabel"><%= t "Login" %></h4>
    </div>
    <%= form_for(resource, as: resource_name,
      url: session_path(resource_name)) do |f| %>
      <div class="modal-body">
        <div class="row">
          <div class="col-xs-6">
            <div class="well">
              <form id="loginForm" method="POST" action="/login/" novalidate="novalidate">
                <div class="form-group">
                  <%= f.label :email %>
                  <%= f.email_field :email, autofocus: true,
                    placeholder: t("signin.email"), class: "form-control" %>
                  <span class="help-block"></span>
                </div>
                <div class="form-group">
                  <%= f.label :password %>
                  <%= f.password_field :password, autocomplete: "off",
                    placeholder: t("signin.password"), class: "form-control" %>
                  <span class="help-block"></span>
                </div>
                <div id="loginErrorMsg" class="a lert alert-error hide"><%= t "signin.err_msg" %></div>
                <% if devise_mapping.rememberable? -%>
                  <div class="field" id="remember">
                    <%= f.check_box :remember_me %>
                    <%= f.label :remember_me %>
                  </div>
                <% end -%>
                <%= f.submit t("login") ,class: "btn btn-success btn-block" %>
              </form>
            </div>
          </div>
          <div class="col-xs-6">
              <p class="lead"><%= t "Login for" %> <span class="text-success"><%= t "another" %></span></p>
              <ul class="list-unstyled" style="line-height: 2">
                  <li>
                    <%= link_to omniauth_authorize_path(resource_name, :twitter),
                      {class: "btn btn-block btn-social btn-twitter"} do %>
                      <i class="fa fa-twitter"></i><%= t "signin.twitter" %>
                    <% end %>
                  </li>
                  <li>
                    <%= link_to omniauth_authorize_path(resource_name, :facebook),
                      {class: "btn btn-block btn-social btn-facebook"} do %>
                      <i class="fa fa-facebook"></i><%= t "signin.facebook" %>
                    <% end %>
                  </li>
                  <li>
                    <%= link_to omniauth_authorize_path(resource_name, :google_oauth2),
                      {class: "btn btn-block btn-social btn-google-plus"} do %>
                      <i class="fa fa-google-plus"></i><%= t "signin.google" %>
                    <% end %>
                  </li>
                  <li>
                    <%= link_to omniauth_authorize_path(resource_name, :linkedin),
                      {class: "btn btn-block btn-social btn-linkedin"} do %>
                      <i class="fa fa-linkedin"></i><%= t "signin.linken" %>
                    <% end %>
                  </li>
              </ul>
              <p><%= link_to t("register"), new_user_registration_path, class: "btn btn-info btn-block" %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
